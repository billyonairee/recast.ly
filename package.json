{
  "name": "recast.ly",
  "version": "1.1.0",
  "description": "Making YouTube with React and ES6",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "test": "live-server --open=./SpecRunner.html --port=8081",
    "test-puppeteer": "mocha test.mocha.js",
    "precommit": "lint-staged",
    "lint": "eslint \"src/**\"",
    "start": "npx babel src --watch --out-dir compiled --presets @babel/preset-react"
  },
  "lint-staged": {
    "linters": {
      "*.js": [
        "eslint",
        "git add"
      ],
      "*.jsx": [
        "eslint",
        "git add"
      ]
    },
    "ignore": [
      ".eslint*",
      "node_modules/",
      "**/*.min.js",
      "compiled",
      "spec"
    ]
  },
  "dependencies": {
    "jquery": "^3.3.1",
    "prop-types": "^15.6.2",
    "react": "^16.5.2",
    "react-dom": "^16.5.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/preset-react": "^7.0.0",
    "chai": "^4.2.0",
    "eslint": "^5.6.1",
    "eslint-plugin-react": "^7.11.1",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.2",
    "mocha": "^5.2.0",
    "puppeteer": "^1.8.0",
    "react-test-renderer": "^16.5.2",
    "react-testing-library": "^5.1.0",
    "sinon": "^6.3.4"
  }
}
